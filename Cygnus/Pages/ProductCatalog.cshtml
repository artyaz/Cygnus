@page
@model ProductCatalogModel
@{
    ViewData["Title"] = "Product Catalog";
}
<h1 style="margin-left: 20px;">@ViewData["Title"]</h1>
<link rel="stylesheet" href="/styles/cygnus-catalog.css">
<div class="cygnus-search"></div>
<div class="cygnus-catalog-view">
    <form method="post">
    <div class="cygnus-filters">
        <h3>Filter Results</h3>
        <button class="cygnus-catalog-apply" asp-page-handler="ApplyFilters">Apply Filters</button>
        <label for="roastLevel">Roast Level:</label>
        <select name="roastLevel" id="roast-level" class="cygnus-catalog-select">
            <option value="">All</option>
            <option value="light">Light</option>
            <option value="medium">Medium</option>
            <option value="dark">Dark</option>
        </select>
        <hr/>
        <label for="origin">Bean Origin:</label>
        <select name="origin" id="origin" class="cygnus-catalog-select">
            <option value="">All</option>
            <option value="africa">Africa</option>
            <option value="asia">Asia</option>
            <option value="central-america">Central America</option>
            <option value="south-america">South America</option>
        </select>
        <hr/>
        <label for="flavorProfile">Flavor Profile:</label>
        <select name="flavorProfile" id="flavor-profile" class="cygnus-catalog-select">
            <option value="">All</option>
            <option value="nutty">Nutty</option>
            <option value="chocolatey">Chocolatey</option>
            <option value="fruity">Fruity</option>
        </select>
        <hr/>
        <label for="organic">Organic:</label>
        <select name="organic" id="organic" class="cygnus-catalog-select">
            <option value="">All</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <hr/>
        <label for="decaf">Decaf:</label>
        <select name="decaf" id="decaf" class="cygnus-catalog-select">
            <option value="">All</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
        <hr/>
        <label for="bagSize">Bag Size:</label>
        <select name="bagSize" id="bag-size" class="cygnus-catalog-select">
            <option value="">All</option>
            <option value="250g">250g</option>
            <option value="500g">500g</option>
            <option value="1kg">1kg</option>
        </select>
        <hr/>
        <label for="price">Price range:</label>
        <div class="cygnus-price-range">
            <input type="number" id="minPrice" name="minPrice" step="any" autocomplete="off" placeholder="0">
            <input type="number" id="maxPrice" name="maxPrice" step="any" autocomplete="off" placeholder="100">
        </div>
    </div>
    </form>
    <div class="cygnus-catalog-products-list">
        @foreach (var product in Model.Products)
        {
            <div class="cygnus-product">
                <div class="product-image">
                    <img src="@product.ImageUrl" alt="@product.Name"/>
                </div>
                <div class="cygnus-product-info">
                    <h2>@product.Name</h2>
                    <p>@product.Description</p>
                </div>
                <div class="cygnus-product-details">
                    <button class="cygnus-add-to-cart" onclick="redirectToProductPage(@product.ProductId)">View Details</button>
                    <p class="cygnus-price">$@product.Price</p>
                </div>
            </div>
        }
    </div>
</div>